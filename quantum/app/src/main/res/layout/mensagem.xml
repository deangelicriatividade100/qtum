<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanho_action_bar"
        android:id="@+id/wrap_bar"
        android:background="@color/corprincipal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mensagem"
            style="@style/titulos"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/campo_txt"
        android:id="@+id/sabia"
        android:layout_below="@id/wrap_bar"
        android:gravity="top"
        android:text="@string/sua_mansagem"
        android:layout_marginTop="@dimen/padding"
        style="@style/hint"/>

</RelativeLayout>